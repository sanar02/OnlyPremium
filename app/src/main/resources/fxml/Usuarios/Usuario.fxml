<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.burgueses.presentacion.controladores.usuario.UsuarioController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label style="-fx-font-size: 18px;" text="Crear Nuevo Usuario" />
    
    <TextField fx:id="apodoField" promptText="Apodo (máx 8 caracteres)" />
    <TextField fx:id="nombreField" promptText="Nombre" />
    <PasswordField fx:id="contrasenaField" promptText="Contraseña" />
    <TextField fx:id="pathImagenField" promptText="Ruta imagen de perfil" />
    <CheckBox fx:id="activoCheck" selected="true" text="Activo" />
   <CheckBox fx:id="Admini" text="Administrador" />
    <ComboBox fx:id="tipoUsuarioCombo" promptText="Tipo de usuario"/>
    <Button fx:id="crearButton" maxWidth="Infinity" text="Crear Usuario" />
</VBox>
